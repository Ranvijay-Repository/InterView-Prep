console.log("multiplyByThree(4):", multiplyByThree(4));     // 12
console.log("subtractTen(15):", subtractTen(15));           // 5

// Compose curried functions
const calculate = pipe(
    addFive,
    multiplyByThree,
    subtractTen
);

console.log("calculate(2):", calculate(2));                 // (2 + 5) * 3 - 10 = 11
