const multiply = (a, b) => a * b;
const divide = (a, b) => a / b;

// Higher order function for validation
const withValidation = (validator, fn) => {
    return function(...args) {
        if (!validator(...args)) {
            throw new Error("Validation failed");
        }
        return fn(...args);
    };
